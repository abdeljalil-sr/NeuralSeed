<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout 
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#1A1A2E">

    <!-- شريط الحالة -->
    <View
        android:id="@+id/status_bar_background"
        android:layout_width="match_parent"
        android:layout_height="24dp"
        android:background="#16213E"
        app:layout_constraintTop_toTopOf="parent"/>

    <!-- زر تكبير/تصغير -->
    <ImageButton
        android:id="@+id/btn_fullscreen"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_margin="8dp"
        android:background="?attr/selectableItemBackgroundBorderless"
        android:src="@android:drawable/ic_menu_crop"
        android:tint="#E94560"
        app:layout_constraintTop_toBottomOf="@id/status_bar_background"
        app:layout_constraintEnd_toEndOf="parent"/>

    <!-- منطقة الصورة المتحركة -->
    <FrameLayout
        android:id="@+id/visual_container"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@id/btn_fullscreen"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <com.neuralseed.MainActivity.PulseView
            android:id="@+id/pulse_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>

        <ImageView
            android:id="@+id/visual_expression"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"/>
    </FrameLayout>

    <!-- معلومات الطور والأنا -->
    <LinearLayout
        android:id="@+id/phase_info_container"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@id/visual_container"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <TextView
            android:id="@+id/phase_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="الطور: فوضوي"
            android:textColor="#E94560"
            android:textSize="14sp"
            android:paddingHorizontal="16dp"
            android:paddingVertical="8dp"
            android:background="@drawable/card_background"
            android:layout_marginEnd="8dp"/>

        <TextView
            android:id="@+id/ego_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="الأنا: المغامر"
            android:textColor="#0F3460"
            android:textSize="14sp"
            android:paddingHorizontal="16dp"
            android:paddingVertical="8dp"
            android:background="@drawable/card_background"/>
    </LinearLayout>

    <!-- بطاقات الإحصائيات -->
    <LinearLayout
        android:id="@+id/stats_container"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="12dp"
        app:layout_constraintTop_toBottomOf="@id/phase_info_container"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <!-- بطاقة الفوضى -->
        <LinearLayout
            android:layout_width="80dp"
            android:layout_height="60dp"
            android:orientation="vertical"
            android:gravity="center"
            android:background="@drawable/stat_card_chaos"
            android:layout_margin="4dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="الفوضى"
                android:textColor="#FFFFFF"
                android:textSize="11sp"/>

            <TextView
                android:id="@+id/chaos_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0.48"
                android:textColor="#FF6B6B"
                android:textSize="18sp"
                android:textStyle="bold"/>
        </LinearLayout>

        <!-- بطاقة اللياقة -->
        <LinearLayout
            android:layout_width="80dp"
            android:layout_height="60dp"
            android:orientation="vertical"
            android:gravity="center"
            android:background="@drawable/stat_card_fitness"
            android:layout_margin="4dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="اللياقة"
                android:textColor="#FFFFFF"
                android:textSize="11sp"/>

            <TextView
                android:id="@+id/fitness_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0.12"
                android:textColor="#4ECDC4"
                android:textSize="18sp"
                android:textStyle="bold"/>
        </LinearLayout>

        <!-- بطاقة الصراع -->
        <LinearLayout
            android:layout_width="80dp"
            android:layout_height="60dp"
            android:orientation="vertical"
            android:gravity="center"
            android:background="@drawable/stat_card_conflict"
            android:layout_margin="4dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="الصراع"
                android:textColor="#FFFFFF"
                android:textSize="11sp"/>

            <TextView
                android:id="@+id/conflict_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0.21"
                android:textColor="#FFE66D"
                android:textSize="18sp"
                android:textStyle="bold"/>
        </LinearLayout>
    </LinearLayout>

    <!-- فقاعات المحادثة -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/chat_recycler_view"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_margin="12dp"
        android:padding="8dp"
        android:background="@drawable/chat_background"
        app:layout_constraintTop_toBottomOf="@id/stats_container"
        app:layout_constraintBottom_toTopOf="@id/input_container"/>

    <!-- منطقة الإدخال -->
    <LinearLayout
        android:id="@+id/input_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="12dp"
        app:layout_constraintBottom_toTopOf="@id/bottom_buttons_container">

        <!-- حقل الإدخال وزر الإرسال -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <EditText
                android:id="@+id/input_edit_text"
                android:layout_width="0dp"
                android:layout_height="48dp"
                android:layout_weight="1"
                android:hint="اكتب شيئاً..."
                android:textColor="#FFFFFF"
                android:textColorHint="#888888"
                android:background="@drawable/input_background"
                android:paddingStart="16dp"
                android:paddingEnd="16dp"
                android:layout_marginEnd="8dp"/>

            <Button
                android:id="@+id/btn_send"
                android:layout_width="80dp"
                android:layout_height="48dp"
                android:text="إرسال"
                android:textColor="#FFFFFF"
                android:background="@drawable/send_button_background"/>
        </LinearLayout>

        <!-- زر التسجيل الصوتي -->
        <ImageButton
            android:id="@+id/btn_mic"
            android:layout_width="56dp"
            android:layout_height="56dp"
            android:layout_gravity="center"
            android:layout_marginTop="8dp"
            android:background="@drawable/mic_button_background"
            android:src="@android:drawable/ic_btn_speak_now"
            android:tint="#FFFFFF"/>
    </LinearLayout>

    <!-- الأزرار السفلية الصغيرة -->
    <LinearLayout
        android:id="@+id/bottom_buttons_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
       :id="@+id/ego_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="الأنا: المغامر"
            android:textColor="#0F3460"
            android:textSize="14sp"
            android:paddingHorizontal="16dp"
            android:paddingVertical="8dp"
            android:background="@drawable/card_background"/>
    </LinearLayout>

    <!-- بطاقات الإحصائيات -->
    <LinearLayout
        android:id="@+id/stats_container"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="12dp"
        app:layout_constraintTop_toBottomOf="@id/phase_info_container"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <!-- بطاقة الفوضى -->
        <LinearLayout
            android:layout_width="80dp"
            android:layout_height="60dp"
            android:orientation="vertical"
            android:gravity="center"
            android:background="@drawable/stat_card_chaos"
            android:layout_margin="4dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="الفوضى"
                android:textColor="#FFFFFF"
                android:textSize="11sp"/>

            <TextView
                android:id="@+id/chaos_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0.48"
                android:textColor="#FF6B6B"
                android:textSize="18sp"
                android:textStyle="bold"/>
        </LinearLayout>

        <!-- بطاقة اللياقة -->
        <LinearLayout
            android:layout_width="80dp"
            android:layout_height="60dp"
            android:orientation="vertical"
            android:gravity="center"
            android:background="@drawable/stat_card_fitness"
            android:layout_margin="4dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="اللياقة"
                android:textColor="#FFFFFF"
                android:textSize="11sp"/>

            <TextView
                android:id="@+id/fitness_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0.12"
                android:textColor="#4ECDC4"
                android:textSize="18sp"
                android:textStyle="bold"/>
        </LinearLayout>

        <!-- بطاقة الصراع -->
        <LinearLayout
            android:layout_width="80dp"
            android:layout_height="60dp"
            android:orientation="vertical"
            android:gravity="center"
            android:background="@drawable/stat_card_conflict"
            android:layout_margin="4dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="الصراع"
                android:textColor="#FFFFFF"
                android:textSize="11sp"/>

            <TextView
                android:id="@+id/conflict_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0.21"
                android:textColor="#FFE66D"
                android:textSize="18sp"
                android:textStyle="bold"/>
        </LinearLayout>
    </LinearLayout>

    <!-- فقاعات المحادثة -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/chat_recycler_view"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_margin="12dp"
        android:padding="8dp"
        android:background="@drawable/chat_background"
        app:layout_constraintTop_toBottomOf="@id/stats_container"
        app:layout_constraintBottom_toTopOf="@id/input_container"/>

    <!-- منطقة الإدخال -->
    <LinearLayout
        android:id="@+id/input_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="12dp"
        app:layout_constraintBottom_toTopOf="@id/bottom_buttons_container">

        <!-- حقل الإدخال وزر الإرسال -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <EditText
                android:id="@+id/input_edit_text"
                android:layout_width="0dp"
                android:layout_height="48dp"
                android:layout_weight="1"
                android:hint="اكتب شيئاً..."
                android:textColor="#FFFFFF"
                android:textColorHint="#888888"
                android:background="@drawable/input_background"
                android:paddingStart="16dp"
                android:paddingEnd="16dp"
                android:layout_marginEnd="8dp"/>

            <Button
                android:id="@+id/btn_send"
                android:layout_width="80dp"
                android:layout_height="48dp"
                android:text="إرسال"
                android:textColor="#FFFFFF"
                android:background="@drawable/send_button_background"/>
        </LinearLayout>

        <!-- زر التسجيل الصوتي -->
        <ImageButton
            android:id="@+id/btn_mic"
            android:layout_width="56dp"
            android:layout_height="56dp"
            android:layout_gravity="center"
            android:layout_marginTop="8dp"
            android:background="@drawable/mic_button_background"
            android:src="@android:drawable/ic_btn_speak_now"
            android:tint="#FFFFFF"/>
    </LinearLayout>

    <!-- الأزرار السفلية الصغيرة -->
    <LinearLayout
        android:id="@+id/bottom_buttons_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:padding="8dp"
        android:background="#16213E"
        app:layout_constraintBottom_toBottomOf="parent">

        <ImageButton
            android:id="@+id/btn_stats"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:src="@android:drawable/ic_menu_sort_by_size"
            android:tint="#E94560"
            android:layout_margin="4dp"/>

        <ImageButton
            android:id="@+id/btn_settings"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:src="@android:drawable/ic_menu_preferences"
            android:tint="#4ECDC4"
            android:layout_margin="4dp"/>

        <ImageButton
            android:id="@+id/btn_learn"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:src="@android:drawable/ic_menu_edit"
            android:tint="#FFE66D"
            android:layout_margin="4dp"/>

        <ImageButton
            android:id="@+id/btn_ask"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:src="@android:drawable/ic_menu_help"
            android:tint="#95E1D3"
            android:layout_margin="4dp"/>

        <ImageButton
            android:id="@+id/btn_train"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:src="@android:drawable/ic_menu_mylocation"
            android:tint="#F38181"
            android:layout_margin="4dp"/>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
